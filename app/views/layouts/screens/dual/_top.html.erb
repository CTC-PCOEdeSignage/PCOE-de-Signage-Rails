<div class="room-details room-details__top half-height">
  <div class="grid">
    <div class="grid__col grid__col--2-of-12 center">
      <p><%= qr_code %></p>
    </div>

    <div class="grid__col grid__col--8-of-12 center">
      <h1 id="room-name"><%= room.name %></h1>
    </div>

    <div class="grid__col grid__col--2-of-12 center">
      <p><%= right_arrow %></p>
    </div>
  </div>

  <div class="grid">
    <div class="grid__col grid__col--12-of-12 center">
      <p id="up-next"><%= room.decorate.availability %></p>
    </div>
  </div>
</div>

