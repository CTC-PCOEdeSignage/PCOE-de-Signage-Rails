<div class="row pt-2">
  <div class="col-md-12">
    <h1><%= t("site.app_name") %> - All Screens</h1>
  </div>
</div>

<div class="row pt-2">
  <div class="col-md-6">
    <ul class="list-group">
      <% @screens.each do |screen| %>
        <li class="list-group-item"><%= link_to screen.name, screen_path(screen) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row pt-2">
  <div class="col-md-6">
    <%= link_to "Room Page", rooms_path, class: "btn btn-info" %>
    <%= link_to "Administrator Login", admin_root_path, class: "btn btn-secondary" %>
  </div>
</div>
