<% @raw_yaml ||= Settings.to_hash.deep_stringify_keys.to_yaml(UseFold: true, UseBlock: true) %>
<%= semantic_form_for :settings, url: { action: :update } do |f| %>
  <%= f.actions do %>
    <%= f.action :submit, label: "Verify and Save", button_html: { data: { disable_with: "Verifying..." } } %>
  <% end %>
  <%= f.inputs "Settings" do %>
    <%= f.text_area :yaml, value: @raw_yaml, rows: 40, cols: 30 %>
  <% end %>
<% end %>
